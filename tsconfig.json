{
  "compilerOptions": {
    "outDir": "bin",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration":true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "test/**/*.spec.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "testimmutability",
    "bin"
  ]
}